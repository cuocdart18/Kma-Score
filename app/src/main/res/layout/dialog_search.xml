<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="searchDataVM"
            type="com.example.kmascore.viewmodels.SearchDataViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_dialog_search_data"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/edt_search_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:afterTextChanged="@{(editable) -> searchDataVM.onAfterSearchEditTextChanged(editable)}"
            android:background="@drawable/bgr_searchview_outline"
            android:drawableStart="@drawable/search_outline_24dp"
            android:drawablePadding="8dp"
            android:hint="@string/hint_search_data"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:text="@={searchDataVM.searchData}"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/ket_qua_tim_kiem"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_query"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>